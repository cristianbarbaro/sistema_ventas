<h3 class="text-center">Marcas</h3>

<div class="col-md-6 col-md-offset-3">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @marks.each do |mark| %>
          <tr>
            <td><%= mark.name %></td>
            <td><%= link_to 'Show', mark %></td>
            <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
            <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="pull-right">
        <%= link_to 'Nueva marca', new_mark_path, class: "btn btn-success" %>
    </div>
    <div class="text-center">
        <%= will_paginate @marks, previous_label: :Anterior, next_label: :Siguiente, renderer: BootstrapPagination::Rails %>
    </div>
</div>
