<h3 class="text-center">Marcas</h3>

<div class="col-md-6 col-md-offset-3">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th style="width: 75%">Nombre</th>
          <th style="width: 25%">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @marks.each do |mark| %>
          <tr>
            <td><%= mark.name %></td>
            <td style="padding: 2px;">
                <div class="btn-group">
                    <%= link_to '', mark, class:'glyphicon glyphicon-eye-open btn btn-sm btn-default', title: 'Ver' %>
                    <%= link_to '', edit_mark_path(mark), class:'glyphicon glyphicon-pencil btn btn-sm btn-default', title: 'Editar' %>
                    <%= link_to '', mark, class:'glyphicon glyphicon-trash btn btn-sm btn-danger', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' }, title: 'Borrar' %>
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="pull-right">
        <%= link_to 'Nueva marca', new_mark_path, class: "btn btn-success" %>
    </div>
    <div class="text-center">
        <%= will_paginate @marks, previous_label: :Anterior, next_label: :Siguiente, renderer: BootstrapPagination::Rails %>
    </div>
</div>
