<div class="container-fluid">
    <%= render "layouts/search_form", search: :name_cont %>
</div>
<hr>

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong class="text-center">Marcas</strong>
        <div class="pull-right">
          <div class="btn-right">
            <%= link_to 'Nueva marca', new_mark_path, class: "btn btn-success btn-xs" %>
          </div>
        </div>
      </div>
      <table class="table table-condensed table-bordered table-hover">
      <thead class="">
        <tr>
          <th class="text-center" style="width: 75%"><%= sortable "name", "Nombre" %></th>
          <th class="text-center" style="width: 25%">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @marks.each do |mark| %>
          <tr>
            <td><%= mark.name %></td>
            <td class="text-center">
                <%= link_to '', mark, class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
                <%= link_to '', edit_mark_path(mark), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
                <%= link_to '', mark, class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' }, title: 'Borrar' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>

    <br>
    <%= render "layouts/pagination", collection: @marks %>
</div>
