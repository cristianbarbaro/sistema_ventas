<h3 class="text-center">Artículos</h3>

<div class="col-md-6 col-md-offset-3">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Precio costo</th>
                <th>Porcentaje</th>
                <th>Precio público</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @articles.each do |article| %>
            <tr>
                <td><%= article.code %></td>
                <td><%= article.name %></td>
                <td><%= article.description %></td>
                <td><%= get_mark_name(article.mark_id) %></td>
                <td><%= article.cost_price %></td>
                <td><%= article.percentage %></td>
                <td><%= article.get_public_price %></td>
                <td><%= link_to 'Show', article %></td>
                <td><%= link_to 'Edit', edit_article_path(article) %></td>
                <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="container-fluid">
        <div class="pull-right">
            <%= link_to 'New Article', new_article_path, class: "btn btn-success" %>
        </div>
    </div>
    <div class="text-center">
        <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
    </div>
</div>
