<h3 class="text-center">Artículos</h3>

<div class="col-md-10 col-md-offset-1">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th>Precio público</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            <% @articles.each do |article| %>
            <tr>
                <td><%= article.code %></td>
                <td><%= article.name %></td>
                <td style="text-overflow:ellipsis;overflow:hidden;white-space:nowrap"><%= article.description %></td>
                <td><%= get_mark_name(article.mark_id) %></td>
                <td>$ <%= article.final_price %></td>
                <td>
                    <%= link_to '', article, class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
                    <%= link_to '', edit_article_path(article), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
                    <%= link_to '', article, class:'glyphicon glyphicon-trash btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' }, title: 'Borrar' %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="container-fluid">
        <div class="pull-right">
            <%= link_to 'Nuevo artículo', new_article_path, class: "btn btn-success" %>
        </div>
    </div>
    <div class="text-center">
        <%= will_paginate @articles, previous_label: :Anterior, next_label: :Siguiente, renderer: BootstrapPagination::Rails %>
    </div>
</div>
