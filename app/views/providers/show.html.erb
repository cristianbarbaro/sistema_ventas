<div class="container col-md-4 col-md-offset-4">
    <h3 class="text-center">Información de proveedor</h3>
    <p>
        <strong>Nombre:</strong>
        <%= @provider.name %>
    </p>
    <p>
        <strong>Contacto:</strong>
        <%= @provider.contact %>
    </p>
    <p>
        <strong>Categoría:</strong>
        <%= get_category_name(@provider.category_id) %>
    </p>

    <div class="pull-right">
        <%= link_to 'Editar', edit_provider_path(@provider), class: "btn btn-success" %>
        <%= link_to 'Proveedores', providers_path, class: "btn btn-default" %>
    </div>
</div>
