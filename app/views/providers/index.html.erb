<h3 class="text-center">Proveedores</h3>

<div class="col-md-6 col-md-offset-3">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Contacto</th>
          <th>Categor√≠a</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @providers.each do |provider| %>
          <tr>
            <td><%= provider.name %></td>
            <td><%= provider.contact %></td>
            <td><%= get_category_name(provider.category_id) %></td>
            <td><%= link_to 'Show', provider %></td>
            <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
            <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="pull-right">
        <%= link_to 'Nuevo proveedor', new_provider_path, class: "btn btn-success" %>
    </div>
    <div class="text-center">
        <%= will_paginate @providers, previous_label: :Anterior, next_label: :Siguiente, renderer: BootstrapPagination::Rails %>
    </div>
</div>
