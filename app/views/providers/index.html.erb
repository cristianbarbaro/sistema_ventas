<div class="container-fluid">
    <%= render "layouts/search_form", search: :name_cont %>
</div>
<hr>

<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <strong>Proveedores</strong>
      <div class="pull-right">
        <div class="btn-right">
          <%= link_to 'Nuevo proveedor', new_provider_path, class: "btn btn-success btn-xs" %>
        </div>
      </div>
    </div>
    <table class="table table-condensed table-bordered table-hover">
      <thead class="">
        <tr>
          <th class="text-center" style="width: 40%"><%= sort_link(@q, :name, default_order: :desc) %></th>
          <th class="text-center" style="width: 40%"><%= sort_link(@q, :contact) %></th>
          <th class="text-center" style="width: 20%">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% @providers.each do |provider| %>
          <tr>
            <td><%= provider.name %></td>
            <td><%= provider.contact %></td>
            <td class="text-center">
                <%= link_to '', provider, class:'glyphicon glyphicon-eye-open btn btn-xs btn-default', title: 'Ver' %>
                <%= link_to '', edit_provider_path(provider), class:'glyphicon glyphicon-pencil btn btn-xs btn-default', title: 'Editar' %>
                <%= link_to '', provider, class:'glyphicon glyphicon-trash btn btn-xs btn-danger', title: 'Borrar', method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar el elemento?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

    <br>
    <%= render "layouts/pagination", collection: @providers %>
</div>
